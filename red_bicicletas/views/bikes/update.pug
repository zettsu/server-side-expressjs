extends ../layout

block content
    a(href='bikes') Volver

    br
    br
    br

    h1 New Bike

    br
    br

    form(action=`/bikes/${bike.id}/update`  method='post')
        label(for='id') ID:
        input#id(type='text' name='id' value=bike.id disabled=true)
        br
        label(for='color') Color:
        input#color(type='text' name='color' value=bike.color)
        br
        label(for='model') Model:
        input#model(type='text' name='model' value=bike.model)
        br
        label(for='location') Location:
        input#location(type='text' name='location' value=bike.location)
        br
        input.btn(type="submit" value="save")
