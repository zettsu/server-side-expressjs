extends ../layout

block content
    a(href='/users') Volver

    br
    br
    br
    br
    h1 New user
    br
    br

    form(action='/users/create' method='post')
        .form-group
            label(for='name') Name:
            input#name.form-control(type='text' name='name' value= user.name class= errors.name ? 'is-invalid': '')
            if errors.name
                small#nameHelp.text-danger
                    = errors.name.message
        .form-group
            label(for='email') Email:
            input#email.form-control(type='text' name='email' value= user.email class= errors.email ? 'is-invalid':'')
            if errors.email
                small#emailHelp.text-danger
                    = errors.email.message
        .form-group
            label(for='password') Password:
            input#password.form-control(type='password' name='password' value= user.password class= errors.password ? 'is-invalid':'')
            if errors.password
                small#pwdHelp.text-danger
                    = errors.password.message
        .form-group
            label(for='confirm_pwd') Confirm password:
            input#confirm_pwd.form-control(type='password' name='confirm_pwd' value= user.confirm_pwd class= errors.confirm_pwd ? 'is-invalid':'')
            if errors.confirm_pwd
                small#passwordConfirmHelp.text-danger
                    = errors.confirm_pwd.message
        br
        br
        input.btn.btn-primary(type='submit' value='save')
